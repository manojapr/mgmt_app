<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="commentfield">
<% if can? :create, Task %>
<%= button_to('create task', new_user_registration_path, :class => 'btn btn-large btn-primary')  %>
<% end %>
</div>


<%= link_to 'New Task', new_task_path %>
